                <DataGridTextColumn Header="Expiry Date" Binding="{Binding ExpiryDate}"  IsReadOnly="True" Visibility="Hidden"/>
                <DataGridTextColumn Header="Batch" Binding="{Binding Batch}"  IsReadOnly="True" Visibility="Hidden"/>
