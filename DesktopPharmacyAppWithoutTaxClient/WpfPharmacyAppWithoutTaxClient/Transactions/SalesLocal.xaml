                <DataGridTextColumn Header="Batch" Binding="{Binding Batch}" IsReadOnly="True" Width="130"/>
                <DataGridTextColumn Header="Rate" Binding="{Binding MRP, StringFormat=N2}"  IsReadOnly="True" Width="150*">
